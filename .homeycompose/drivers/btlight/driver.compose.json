  "name": {
    "en": "BT Light",
    "sv": "BT-Lampa"
  },
  "class": "light",
  "icon": "/drivers/btlight/assets/icon.svg",
  "images": {
    "small": "/drivers/btlight/assets/images/small.png",
    "large": "/drivers/btlight/assets/images/large.png"
  },
  "capabilities": [
    "onoff",
    "dim",
    "light_mode",
    "light_hue",
    "light_saturation"
