        {
          "id": "RGB",
          "label": {
            "en": "RGB",
            "sv": "RGB"
          }
        },
        {
          "id": "GRB",
          "label": {
            "en": "GRB",
            "sv": "GRB"
          }
        },
        {
          "id": "BGR",
          "label": {
            "en": "BGR",
            "sv": "BGR"
          }
        }
      ],
      "value": "RGB"
    },
    {
      "id": "onValue",
      "type": "text",
      "label": {
        "en": "On value (hex)",
        "sv": "On-värde (hex)"
      },
      "hint": {
        "en": "Hex payload for ON (default 01)",
        "sv": "Hexvärde för PÅ (standard 01)"
      },
      "value": "01"
    },
    {
      "id": "offValue",
      "type": "text",
      "label": {
        "en": "Off value (hex)",
        "sv": "Off-värde (hex)"
      },
      "hint": {
        "en": "Hex payload for OFF (default 00)",
        "sv": "Hexvärde för AV (standard 00)"
      },
      "value": "00"
